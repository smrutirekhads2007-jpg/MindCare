  <main>
    <div class="test-progress-bar">
      <div class="test-progress-bar-inner" id="testProgressBarInner" style="width:0%"></div>
    </div>
    <div id="testCard"></div>
  </main>
  <footer>
    <p style="text-align:center;color:#888;font-size:1em;">&copy; 2025 MindCare</p>
  </footer>
